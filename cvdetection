import cv2
import requests
import time

PHONE_STREAM = "http://172.16.44.113:8080/video"
ESP32_URL = "http://172.16.45.177/update"

cap = cv2.VideoCapture(PHONE_STREAM)

hog = cv2.HOGDescriptor()
hog.setSVMDetector(cv2.HOGDescriptor_getDefaultPeopleDetector())

last_sent = -1

while True:
    ret, frame = cap.read()
    if not ret:
        continue

    boxes, _ = hog.detectMultiScale(frame, winStride=(8,8))

    human_present = 1 if len(boxes) > 0 else 0

    # send only if state changes
    if human_present != last_sent:
        try:
            requests.get(ESP32_URL, params={"human": human_present}, timeout=1)
            last_sent = human_present
        except:
            pass

    for (x, y, w, h) in boxes:
        cv2.rectangle(frame, (x,y), (x+w,y+h), (0,255,0), 2)

    cv2.imshow("Human Detection", frame)

    if cv2.waitKey(1) == 27:
        break

cap.release()
cv2.destroyAllWindows()


#include <WiFi.h>
#include <WebServer.h>

const char* ssid = "VITC-EVENT";
const char* password = "Eve@07&08#$";

WebServer server(80);

void handleUpdate() {
  String human = server.arg("human");

  if (human == "1") {
    Serial.println("HUMAN DETECTED");
    digitalWrite(2, HIGH);   // LED ON
  } else {
    Serial.println("NO HUMAN");
    digitalWrite(2, LOW);    // LED OFF
  }

  server.send(200, "text/plain", "OK");
}

void setup() {
  Serial.begin(115200);
  pinMode(2, OUTPUT);

  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("\nConnected!");
  Serial.println(WiFi.localIP());

  server.on("/update", handleUpdate);
  server.begin();
}

void loop() {
  server.handleClient();
}
