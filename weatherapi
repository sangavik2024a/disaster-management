#include <WiFi.h>
#include <HTTPClient.h>
#include <ArduinoJson.h>

// WiFi credentials
const char* ssid = "YOUR_WIFI_SSID";
const char* password = "YOUR_WIFI_PASSWORD";

// Open-Meteo API
const char* apiUrl = "https://api.open-meteo.com/v1/forecast?latitude=-20.311340068173244&longitude=118.6114023&hourly=precipitation,rain,wind_speed_80m&timezone=auto";

void setup() {
  Serial.begin(9600);
  delay(1000);
  
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nConnected!");
  
  getWeather();
}

void loop() {
  // Update every 5 minutes
  delay(300000);
  getWeather();
}

void getWeather() {
  if (WiFi.status() != WL_CONNECTED) return;
  
  HTTPClient http;
  http.begin(apiUrl);
  
  if (http.GET() == 200) {
    String response = http.getString();
    
    StaticJsonDocument<2048> doc;
    deserializeJson(doc, response);
    
    float rain = doc["hourly"]["rain"][0];
    float wind = doc["hourly"]["wind_speed_80m"][0];
    float precip = doc["hourly"]["precipitation"][0];
    
    Serial.println("\n--- Weather Update ---");
    Serial.print("Rain: ");
    Serial.print(rain);
    Serial.println(" mm");
    
    Serial.print("Wind: ");
    Serial.print(wind);
    Serial.println(" km/h");
    
    Serial.print("Precipitation: ");
    Serial.print(precip);
    Serial.println(" mm");
    
    // Simple status
    Serial.print("Status: ");
    if (rain > 5) Serial.println("Rainy üåßÔ∏è");
    else if (wind > 25) Serial.println("Windy üí®");
    else Serial.println("Clear ‚òÄÔ∏è");
    
  } else {
    Serial.println("Failed to get data");
  }
  
  http.end();
}
